{
  "type": "object",
  "title": "Event",
  "properties": {
    "type": { "type": "string", "default": "Event", "options": {"hidden": true}},
    "name": { "type": "string" , "title": "Name"},
    "description": { "type": "string", "title": "About"},
    "url":  { "type" : "string", "title": "Homepage"},
    "image": { "type": "string" , "title": "Image URL"},
    "startDate": { "type": "string", "title": "Start Date"},
    "endDate": { "type": "string", "title": "End date"},
    "organizer": {
      "type": "array",
      "uniqueItems": true,
      "title": "Organizers",
      "items": {
        "$ref": "plp-prototypes/_basic_organization.json"
      }
    },
    "performer": {
      "type": "array",
      "uniqueItems": true,
      "title": "Performers",
      "items": {
        "$ref": "plp-prototypes/_basic_person.json"
      }
    },
    "eventStatus" : {
      "type": "string",
      "title":"Status",
      "enum": [
        "Scheduled",
        "Cancelled",
        "Postponed",
        "Rescheduled"
      ]
    },
    "location": {
      "type": "array",
      "uniqueItems": true,
      "title": "Locations",
      "items": {
        "$ref": "plp-prototypes/_basic_place.json"
      }
    },
    "workPerformed": {
      "type": "array",
      "uniqueItems": true,
      "title": "Projects participating",
      "items": {
        "$ref": "plp-prototypes/_basic_project.json"
      }
    }
  }
}
