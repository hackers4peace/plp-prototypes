          "$ref": "plp-prototypes/basic_sameas.json"
        }
      },
      "interest": {
        "type": "array",
        "uniqueItems": true,
        "title": "Areas of interest",
        "items":  {
          "title": "Interest",
          "$ref": "plp-prototypes/basic_interest.json"
        }
