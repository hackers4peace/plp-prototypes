{
  "schema" : {
    "type": "object",
    "title": "Event",
    "properties": {
      "type": { "type": "string", "default": "Event", "options": {"hidden": true}},
      "name": { "type": "string" , "title": "Name"},
      "description": { "type": "string", "title": "About"},
      "url":  { "type" : "string", "title": "Homepage"},
      "image": { "type": "string" , "title": "Image URL"},
      "startDate": { "type": "string", "title": "Start Date"},
      "endDate": { "type": "string", "title": "End date"},
      "organizer": {
        "type": "array",
        "uniqueItems": true,
        "title": "Organizers",
        "items": {
          "title": "Organizer (Person or Organization)",
          "$ref": "plp-prototypes/basic_thing.json"
        }
      },
      "performer": {
        "type": "array",
        "uniqueItems": true,
        "title": "Performers",
        "items": {
          "title": "Performer (Person or Organization)",
          "$ref": "plp-prototypes/basic_thing.json"
        }
      },
      "eventStatus" : {
        "type": "string",
        "title":"Status",
        "enum": [
          "Scheduled",
          "Cancelled",
          "Postponed",
          "Rescheduled"
        ]
      },
      "location": {
        "type": "array",
        "uniqueItems": true,
        "title": "Locations",
        "items": {
          "title": "Location (Place)",
          "$ref": "plp-prototypes/basic_thing.json"
        }
      },
      "workPerformed": {
        "type": "array",
        "uniqueItems": true,
        "title": "Projects participating",
        "items": {
          "title": "Project",
          "$ref": "plp-prototypes/basic_thing.json"
        }
      }
    }
  }
}
